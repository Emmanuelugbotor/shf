<%- include ('partials/dashboardHeader.ejs') %>

  <body id="page-top">

    <div id="wrapper" style="
      background-color: #121d33 !important;
      background-image: url(images/hero-gradient.svg);
      background-position-y: bottom;
      background-repeat: no-repeat;
      background-size: cover;
    ">
      <%- include ('partials/dashboardSidetab.ejs') %>

        <div id="content-wrapper" class="d-flex flex-column">
          <div id="content">
            <%- include ('partials/dashboardNavTab.ejs') %>

              <div class="container-fluid">

                <center>

                  <div>
                    <h1 class="h3 mb-20 text-gray-500">
                      <%= miningPackage %> Packages
                    </h1>
                  </div>

                </center>

                <%if(data && miningCoin && miningPackage && address && img){%>



                  <div class="row">
                    <div class="col-md-3"></div>
                    <div class="col-xl-6 col-md-6 mb-4">
                      <div class="card border-left-primary shadow h-100 py-2">
                        <div class="card-body">
                          <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                              <div class="
                          text-xs
                          font-weight-bold
                          text-primary text-uppercase
                          mb-1
                        ">
                                <!-- <%= miningCoin %> Packages -->
                              </div>
                              <div class="h5 mb-0 font-weight-bold text-gray-800">
                                <div class="card">
                                  <div class="card-body">
                                    <div class="feature card" style="padding: 10px">
                                      <h5 class="title title-sm">
                                        <%= miningPackage %> Packages
                                      </h5>
                                      <small>Min price: <%= data.Price %> USD</small><br />
                                      <small>Max price:
                                        <%if(data.Price2){%>

                                          <%= data.Price2 %> USD
                                            <%}else{%>

                                              ~ USD


                                              <%}%>
                                      </small><br />
                                      <small>Duration: <%= data.Duration %></small><br />
                                      <small>Returns: <%= data.Returns %></small><br />
                                    </div>
                                  </div>
                                  <div class="card-footer">
                                    <form method="POST" action="/paymemtamt">
                                      <div class="form-group">
                                        <input type="hidden" value="<%=miningCoin%>$<%=miningPackage%>" name="pac" />
                                      </div>
                                      <div class="form-group">

                                        <input class="form-control" name="depositAmt" required
                                          placeholder="Enter amount to deposite" type="number" min="<%= data.Price %>"
                                          max="<%= data.Price2 %>" />
                                        <button type="submit" class="form-control btn btn-success"
                                          style="margin-top: 10px;">Submit </button>
                                      </div>
                                    </form>

                                  </div>
                                </div>


                              </div>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                    <div class="col-md-3"></div>



                  </div>



                  <%}else{%>
                    <p>Select a valid mining plan</p>
                    <%}%>

              </div>
          </div>
          <footer class="sticky-footer bg-white">
            <div class="container my-auto">
              <div class="copyright text-center my-auto">
                <span>Copyright &copy; nexgoldfinance.com 2021</span>
              </div>
            </div>
          </footer>
        </div>
    </div>

    <a class="scroll-to-top rounded" href="#page-top">
      <i class="fas fa-angle-up"></i>
    </a>



    <%- include ('partials/dashboardFooter.ejs') %>
  </body>